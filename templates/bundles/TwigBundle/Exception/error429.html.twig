{% extends '@Twig/Exception/base_error.html.twig' %}

{% block error_title %}{{ 'error.429.title'|trans({'%website_name%': symkit_error_website_name}) }}{% endblock %}

{% block cursor_color %}#f97316{% endblock %}

{% block glow_effect %}
<div class="error-glow error-glow--orange"></div>
{% endblock %}

{% block terminal_card %}
<div class="terminal">
    <div class="terminal-header">
        <div class="terminal-dots">
            <div class="terminal-dot terminal-dot--close"></div>
            <div class="terminal-dot terminal-dot--minimize"></div>
            <div class="terminal-dot terminal-dot--maximize"></div>
        </div>
        <div class="terminal-title">system@rate-limiter: ~</div>
        <div class="terminal-header-icon text-orange">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67V7z"/></svg>
        </div>
    </div>

    <div class="terminal-body">
        <div class="terminal-cmd">{{ 'error.429.terminal.cmd'|trans }}</div>
        <div class="terminal-error text-orange">
            {{ 'error.429.terminal.error_line1'|trans }}<br>
            {{ 'error.429.terminal.error_line2'|trans }}
        </div>
        <div class="terminal-info">
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.code'|trans }}</span>
                <span class="text-primary">429_TOO_MANY_REQUESTS</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.status'|trans }}</span>
                <span class="text-red">{{ 'error.429.terminal.status'|trans }}</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.429.terminal.label.retry'|trans }}</span>
                <span class="text-cyan">{{ 'error.429.terminal.retry'|trans }}</span>
            </div>
        </div>
        <div class="terminal-prompt">
            <span class="text-orange">&#10148;</span> <span class="terminal-cursor"></span>
        </div>
    </div>
</div>
{% endblock %}

{% block error_content %}
<h1>{{ 'error.429.heading'|trans }}</h1>
<p>{{ 'error.429.message'|trans }}</p>
<p class="sub-text">{{ 'error.429.sub_message'|trans }}</p>

<div class="error-actions">
    <a href="{{ symkit_error_home_path }}" class="btn-home">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        {{ 'error.action.home'|trans }}
    </a>
</div>
{% endblock %}

{% block footer_link %}
<a href="{{ symkit_error_home_path }}">{{ 'error.429.footer_link'|trans }}</a>
{% endblock %}
