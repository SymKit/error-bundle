{% extends '@Twig/Exception/base_error.html.twig' %}

{% block meta_robots %}<meta name="robots" content="noindex, follow">{% endblock %}
{% block error_title %}{{ 'error.503.title'|trans({'%website_name%': symkit_error_website_name}) }}{% endblock %}

{% block cursor_color %}#0ea5e9{% endblock %}

{% block glow_effect %}
<div class="error-glow error-glow--blue"></div>
{% endblock %}

{% block terminal_card %}
<div class="terminal">
    <div class="terminal-header">
        <div class="terminal-dots">
            <div class="terminal-dot terminal-dot--close"></div>
            <div class="terminal-dot terminal-dot--minimize"></div>
            <div class="terminal-dot terminal-dot--maximize"></div>
        </div>
        <div class="terminal-title">ops@maintenance: ~</div>
        <div class="terminal-header-icon text-cyan">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
        </div>
    </div>

    <div class="terminal-body">
        <div class="terminal-cmd">{{ 'error.503.terminal.cmd'|trans }}</div>
        <div class="terminal-error text-cyan">
            {{ 'error.503.terminal.error_line1'|trans }}<br>
            {{ 'error.503.terminal.error_line2'|trans }}
        </div>
        <div class="terminal-info">
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.code'|trans }}</span>
                <span class="text-primary">503_SERVICE_UNAVAILABLE</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.status'|trans }}</span>
                <span class="text-cyan">{{ 'error.503.terminal.status'|trans }}</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.503.terminal.label.eta'|trans }}</span>
                <span class="text-cyan">{{ 'error.503.terminal.eta'|trans }}</span>
            </div>
        </div>
        <div class="terminal-prompt">
            <span class="text-cyan">&#10148;</span> <span class="terminal-cursor"></span>
        </div>
    </div>
</div>
{% endblock %}

{% block error_content %}
<h1>{{ 'error.503.heading'|trans }}</h1>
<p>{{ 'error.503.message'|trans }}</p>
<p class="sub-text">{{ 'error.503.sub_message'|trans }}</p>

<div class="error-actions">
    <a href="{{ symkit_error_home_path }}" class="btn-home">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        {{ 'error.action.home'|trans }}
    </a>
</div>
{% endblock %}

{% block footer_link %}
<a href="{{ symkit_error_home_path }}">{{ 'error.503.footer_link'|trans }}</a>
{% endblock %}
