{% extends '@Twig/Exception/base_error.html.twig' %}

{% block error_title %}{{ 'error.401.title'|trans({'%website_name%': symkit_error_website_name}) }}{% endblock %}

{% block terminal_card %}
<div class="terminal terminal--shake">
    <div class="terminal-header">
        <div class="terminal-dots">
            <div class="terminal-dot terminal-dot--close"></div>
            <div class="terminal-dot terminal-dot--minimize"></div>
            <div class="terminal-dot terminal-dot--maximize"></div>
        </div>
        <div class="terminal-title">gatekeeper@security: ~</div>
        <div class="terminal-header-icon text-red">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1s3.1 1.39 3.1 3.1v2z"/></svg>
        </div>
    </div>

    <div class="terminal-body">
        <div class="terminal-cmd">{{ 'error.401.terminal.cmd'|trans }}</div>
        <div class="terminal-error text-red">
            {{ 'error.401.terminal.error_line1'|trans }}<br>
            {{ 'error.401.terminal.error_line2'|trans }}
        </div>
        <div class="terminal-info">
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.code'|trans }}</span>
                <span class="text-primary">401_UNAUTHORIZED</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.401.terminal.label.reason'|trans }}</span>
                <span class="text-primary">{{ 'error.401.terminal.reason'|trans }}</span>
            </div>
        </div>
        <div class="terminal-prompt">
            <span class="text-red">&#10148;</span> <span class="terminal-cursor"></span>
        </div>
    </div>
</div>
{% endblock %}

{% block error_content %}
<h1>{{ 'error.401.heading'|trans }}</h1>
<p>{{ 'error.401.message'|trans }}</p>

<div class="error-actions">
    <a href="/" class="btn-home">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        {{ 'error.action.home'|trans }}
    </a>
</div>
{% endblock %}
