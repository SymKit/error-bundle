{% extends '@Twig/Exception/base_error.html.twig' %}

{% block meta_robots %}<meta name="robots" content="noindex, follow">{% endblock %}
{% block error_title %}{{ 'error.404.title'|trans({'%website_name%': symkit_error_website_name}) }}{% endblock %}

{% block cursor_color %}#f59e0b{% endblock %}

{% block glow_effect %}
<div class="error-glow error-glow--yellow"></div>
{% endblock %}

{% block terminal_card %}
<div class="terminal">
    <div class="terminal-header">
        <div class="terminal-dots">
            <div class="terminal-dot terminal-dot--close"></div>
            <div class="terminal-dot terminal-dot--minimize"></div>
            <div class="terminal-dot terminal-dot--maximize"></div>
        </div>
        <div class="terminal-title">{{ 'error.404.terminal.title'|trans }}</div>
        <div></div>
    </div>

    <div class="terminal-body">
        <div class="terminal-cmd">{{ 'error.404.terminal.cmd'|trans }}</div>
        <div class="terminal-error text-yellow">
            {{ 'error.404.terminal.error_line1'|trans }}<br>
            {{ 'error.404.terminal.error_line2'|trans }}
        </div>
        <div class="terminal-info">
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.code'|trans }}</span>
                <span class="text-primary">404_NOT_FOUND</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.404.terminal.label.path'|trans }}</span>
                <span class="text-primary">{{ app.request.pathInfo }}</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.404.terminal.label.ping'|trans }}</span>
                <span class="text-red">{{ 'error.404.terminal.ping'|trans }}</span>
            </div>
        </div>
        <div class="terminal-prompt">
            <span class="text-cyan">&#10148;</span> <span class="terminal-cursor"></span>
        </div>
    </div>
</div>
{% endblock %}

{% block error_content %}
<h1>{{ 'error.404.heading'|trans }}</h1>
<p>{{ 'error.404.message'|trans }}</p>

<div class="error-actions">
    <a href="{{ symkit_error_home_path }}" class="btn-home">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        {{ 'error.action.home'|trans }}
    </a>
</div>
{% endblock %}
