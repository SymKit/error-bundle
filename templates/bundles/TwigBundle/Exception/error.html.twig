{% extends '@Twig/Exception/base_error.html.twig' %}

{% block error_title %}{{ 'error.generic.title'|trans({'%website_name%': symkit_error_website_name}) }}{% endblock %}

{% block terminal_card %}
<div class="terminal">
    <div class="terminal-header">
        <div class="terminal-dots">
            <div class="terminal-dot terminal-dot--close"></div>
            <div class="terminal-dot terminal-dot--minimize"></div>
            <div class="terminal-dot terminal-dot--maximize"></div>
        </div>
        <div class="terminal-title">root@core: ~</div>
        <div></div>
    </div>

    <div class="terminal-body">
        <div class="terminal-cmd">{{ 'error.generic.terminal.cmd'|trans }}</div>
        <div class="terminal-error text-red">
            {{ 'error.generic.terminal.error_line1'|trans }}<br>
            {{ 'error.generic.terminal.error_line2'|trans }}
        </div>
        <div class="terminal-info">
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.code'|trans }}</span>
                <span class="text-primary">{{ status_code|default('500') }}_SERVER_ERROR</span>
            </div>
            <div class="terminal-info-row">
                <span class="terminal-info-label">{{ 'error.terminal.label.status'|trans }}</span>
                <span class="text-cyan">{{ 'error.generic.terminal.status'|trans }}</span>
            </div>
        </div>
        <div class="terminal-prompt">
            <span class="text-green">&#10148;</span> <span class="terminal-cursor"></span>
        </div>
    </div>
</div>
{% endblock %}

{% block error_content %}
<h1>{{ 'error.generic.heading'|trans }}</h1>
<p>{{ 'error.generic.message'|trans }}</p>

<div class="error-actions">
    <a href="/" class="btn-home">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        {{ 'error.action.home'|trans }}
    </a>
</div>
{% endblock %}
